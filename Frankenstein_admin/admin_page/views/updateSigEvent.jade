extends layout

block content
	#page-content-wrapper
		.container-fluid.search-panel
			.row
				.col-lg-12
					script.
						var allEvents = !{allEvents};

					h1 Frankenstein
					hr
					h2 Pick a Significant Event
					form.form(role='form' action="/remove_Event" method="POST" onsubmit="return confirm('Do you really want to delete this crew?');")
						select.form-control#theEvent(name="event_name" onchange="addID()")
						br
						br
						input#hidden(type="hidden" name="_id" value="aValue")
						button(type="button" onclick='updateTheEvent();').btn.btn-primary.btn-lg Update
						input.btn.btn-danger(type='submit' value="Remove")
						br
						br
						button(type="button" onclick="newEvent();").btn.btn-success
							span.glyphicon.glyphicon-plus(aria-hidden='true')
							|   New Significant Event
						br
						br
						

		.container-fluid.result-panel
			.row
				.col-lg-12#thisOne

	script(type='text/javascript' src="/js/updateEventScript.js")
