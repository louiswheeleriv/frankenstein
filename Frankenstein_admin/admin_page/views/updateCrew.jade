extends layout

block content
	#page-content-wrapper
		.container-fluid.search-panel
			.row
				.col-lg-12
					script.
						var allCrew = !{allCrew};

					h1 Frankenstein
					hr
					h2 Pick a Crew Member
					form.form(role='form' action="/remove_crew" method="POST" onsubmit="return confirm('Do you really want to delete this crew?');")
						select.form-control#theCrew(name="crew_name" onchange="addID()")
						br
						br
						input#hidden(type="hidden" name="_id" value="aValue")
						button(type="button" onclick='updateTheCrew();').btn.btn-primary.btn-lg Update
						input.btn.btn-danger(type='submit' value="Remove")
						br
						br
						button(type="button" onclick="newCrew();").btn.btn-success
							span.glyphicon.glyphicon-plus(aria-hidden='true')
							|   New Crew
						br
						br
						

		.container-fluid.result-panel
			.row
				.col-lg-12#thisOne

	script(type='text/javascript' src="/js/updateCrewScript.js")
