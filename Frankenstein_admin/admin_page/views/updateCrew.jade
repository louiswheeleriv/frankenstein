extends layout

block content
	script(type='text/javascript' src="/js/updateCrewScript.js")
	#page-content-wrapper
		.container-fluid.search-panel
			.row
				.col-lg-12
					script.
						//- var allActors = !{allActors};

					h1 Frankenstein
					hr
					h2 Pick an Crew Member
					form.form(role='form' action="/remove_crew" method="POST")
						select.form-control#theCrew(name="crew_name")
						br
						br
						.btn-group(role='group')
							button(type="button" onclick='updateTheCrew();').btn.btn-primary.btn-lg Update
							button.btn.btn-danger(type='submit' onclick="removeCrew();")
								span.glyphicon.glyphicon-remove(aria-hidden='true')
								|   Remove
						br
						br
						button(type="button" onclick="newCrew();").btn.btn-success
							span.glyphicon.glyphicon-plus(aria-hidden='true')
							|   New Crew
						br
						br
						

		.container-fluid.result-panel
			.row
				.col-lg-12#thisOne